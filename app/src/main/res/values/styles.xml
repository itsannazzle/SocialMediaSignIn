<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--Text Input Layout Start-->

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/DIMEN_16_DP_CONSTANT</item>
        <item name="boxStrokeWidth">@dimen/DIMEN_0_DP_CONSTANT</item>
        <item name="boxStrokeWidthFocused">@dimen/DIMEN_0_DP_CONSTANT</item>
        <item name="helperTextTextColor">@color/WhiteColorConstant</item>
    </style>

<!--    Text Input Layout End-->


<!--    Text View Start-->

    <style name="text_view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="android:textColor">@color/WhiteColorConstant</item>
    </style>

    <style name="text_view_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_marginTop">@dimen/DIMEN_16_DP_CONSTANT</item>
        <item name="android:textColor">@color/WhiteColorConstant</item>
    </style>

<!--    Text View End-->


<!--    Button Start-->

    <style name="button_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/DIMEN_56_DP_CONSTANT</item>
        <item name="android:backgroundTint">@color/PrimaryColorConstant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

<!--    Button End-->

</resources>